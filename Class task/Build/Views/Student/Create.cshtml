@model viewmodeltask.ViewModels.StudentViewModel

<h2>Add New Student</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <h3>Personal Information</h3>
    <div class="form-group">
        <label asp-for="PersonalInfo.Name">Name</label>
        <input asp-for="PersonalInfo.Name" class="form-control" />
        <span asp-validation-for="PersonalInfo.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PersonalInfo.Surname">Surname</label>
        <input asp-for="PersonalInfo.Surname" class="form-control" />
        <span asp-validation-for="PersonalInfo.Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PersonalInfo.Gender">Gender</label>
        <input asp-for="PersonalInfo.Gender" class="form-control" />
        <span asp-validation-for="PersonalInfo.Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PersonalInfo.Address">Address</label>
        <input asp-for="PersonalInfo.Address" class="form-control" />
        <span asp-validation-for="PersonalInfo.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PersonalInfo.Age">Age</label>
        <input asp-for="PersonalInfo.Age" class="form-control" />
        <span asp-validation-for="PersonalInfo.Age" class="text-danger"></span>
    </div>

    <h3>University Information</h3>
    <div id="subjectsContainer">
        <div class="subject-entry mb-3">
            <div class="row">
                <div class="col-md-6">
                    <label>Subject</label>
                    <input name="UniversityInfo.Subjects" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label>Mark</label>
                    <input name="UniversityInfo.Marks" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-secondary mb-3" onclick="addSubject()">Add Another Subject</button>

    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function addSubject() {
            const container = document.getElementById('subjectsContainer');
            const newEntry = document.createElement('div');
            newEntry.className = 'subject-entry mb-3';
            newEntry.innerHTML = `
                <div class="row">
                    <div class="col-md-6">
                        <label>Subject</label>
                        <input name="UniversityInfo.Subjects" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label>Mark</label>
                        <input name="UniversityInfo.Marks" class="form-control" />
                    </div>
                </div>
            `;
            container.appendChild(newEntry);
        }
    </script>
} 